<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}Louvre - Billetterie{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css">
        <link rel="stylesheet" href="{{ asset('css/main.css') }}">
        <link rel="stylesheet" href="{{ asset('css/reset.css') }}">
        <link rel="shortcut icon" href="{{ asset('images/favicon.ico') }}" type="image/x-icon">
        <link rel="icon" href="{{ asset('images/favicon.ico') }}" type="image/x-icon">
        <link href="https://fonts.googleapis.com/css?family=Roboto|Source+Serif+Pro" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Diplomata+SC|Roboto|Source+Serif+Pro" rel="stylesheet">
    {% endblock %}
</head>
<body data-spy="scroll" data-target="#ancreHoraire">
    <div class="container">
        <header >
            <div id="header">
                <a href="http://www.louvre.fr/" target="_blank"><img src="{{ asset('images/tn_louvre-530058_1280.jpg') }}" title="Vers l'accueil" alt="Logo Louvre" id="logo"></a>
                <h1 id="titre_header">BILLETTERIE</h1>
            </div>
        </header>

        {% block body %}
        {% endblock %}

        <footer id="footer">
            <nav>
                <ul>
                    <li><a href="http://www.louvre.fr/" target="_blank">Accueil</a></li>

                    <li><a href="https://www.ticketlouvre.fr/louvre/b2c/index.cfm/CGV" target="_blank">Conditions Générales de vente</a></li>
                </ul>
                <p>© Musée du Louvre - {{ 'now'|date('Y') }}. Tous droits réservés</p>
            </nav>

        </footer>

    </div>
{% block javascripts %}

    <script src="http://code.jquery.com/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script src="{{ asset('js/datepicker.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/addAndDeleteTicket.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/disableStripeButton.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/disableValiderButton.js') }}"></script>

{% endblock %}
</body>
</html>
